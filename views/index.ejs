<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App</title>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <!-- Icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <section class="container">
        <h2 class="center-align">To Do List</h2>
        <section class="todo">
            <form action="/" method="POST" class="card-panel blue lighten-4">
                <input type="text" name="category" value="Category">
                <textarea name="todo" id="" cols="45" rows="6">Todo</textarea>
                <button type="submit"><span class="fas fa-plus">Add Task</span></button>
            </form>
            <ul class="todo-list">
                <% todo.forEach(task => {%> 
                <li class="todo-list-item">
                    <div class="todo-list-item-category">
                        <%= task.category %>
                    </div>
                    <div class="todo-list-item-todo">
                        <%= task.todo %>
                    </div>
                    <a href="/edit/<%=task._id%>" class="edit"><span class="fas fa-edit"></span></a>
                    <a href="/remove/<%=task._id%>" class="remove"><span class="fas fa-trash"></span></a>
                </li>
               <% }) %>
            </ul>
        </section>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>